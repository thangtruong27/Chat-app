<!doctype html>
<html>
  <head>
    <title>Message</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      h1 { padding: 5px ;}
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; border-radius: 25}
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; border-radius: 25}
      #messages li:nth-child(odd) { background: #6496e7; }
    </style>
  </head>
  <body>
    <h1>Your nickname:<div id="nickname"><%= nickname %></div></h1>
    <ul id="messages"></ul>
    <form action="">
      <input id="msgInput" autocomplete="off" /><button>Send</button>
    </form>
  </body>
</html>

<script src="/socket.io/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script>
    $(function () {
      $('form').submit(function(){
        socket.emit('new message', {
          'nickname':$('#nickname').text(),
          'message':$('#msgInput').val()
        });
        $('#msgInput').val('');
        return false;
      });
      
      $('#msgInput').focus(function() {
        socket.emit('typing',$('#nickname').text());
      });

      $('#msgInput').focusout(function(){
        socket.emit('stop typing',$('#nickname').text());
      });
      
      socket.on('new message', function(msg){
        $('#messages').append($('<li>').text(`${msg.nickname}: ${msg.message}`));
        window.scrollTo(0, document.body.scrollHeight);
      });

      socket.on('stop typing', function(nickname){
        $('ul').find(`#${nickname}isTyping`).remove();
      });

      socket.on('typing', function(nickname){
        $('#messages').append($(`<li id="${nickname}isTyping">`).text(`${nickname} is typing`));
        window.scrollTo(0, document.body.scrollHeight);
      });

    });
  </script>